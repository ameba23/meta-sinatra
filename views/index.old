<html>
  <head>
    <title>metadb</title>
  </head>
  <body>
    <h1>metadb</h1>
    <p> DB contains <%= numberfiles %> files consisting of:
    <ul>
      <li><%= numberaudio %> <a href="audio">audio</a> files.</li>
      <li><%= numberimages %> <a href="images">images</a></li>
    </ul>
    <hr>
    <% @result['rows'].each do |item| %> 
      <% data2 = RestClient.get "#{DB}/#{item['id']}" %>
      <% result1 = JSON.parse(data2) %>
      <% if result1['_id'].include? "_design" %>
      <% else %> 
        <% result1.each do |keys| %>
          <p><%= keys %></p>
        <% end %>
      <% end %>
    <% end %>
  </body>
</html>
